        gcnv_model_wf(get_gcnv_scatter_intervals_input()),
    output:
        directory(wf.get_output_files("gcnv", "scatter_intervals")),
    log:
        wf.get_log_file("gcnv", "scatter_intervals"),
    wrapper:
        wf.wrapper_path("gcnv/scatter_intervals")


