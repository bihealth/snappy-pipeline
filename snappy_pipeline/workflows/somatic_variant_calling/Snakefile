        normal_lib_name=wf.substep_getattr("mutect2", "get_normal_lib_name"),
        tumor_lib_name=wf.substep_getattr("mutect2", "get_tumor_lib_name"),
    wrapper:
        wf.wrapper_path("mutect2/filter")


