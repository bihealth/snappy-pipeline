# -*- coding: utf-8 -*-
"""CUBI Pipeline somatic neoepitope prediction step Snakefile"""

import os

from snappy_pipeline import expand_ref
from snappy_pipeline.workflows.somatic_neoepitope_prediction import (
    SomaticNeoepitopePredictionWorkflow,
)

__author__ = "Eric Blanc"


# Configuration ===============================================================


configfile: "config.yaml"


# Expand "$ref" JSON pointers in configuration (also works for YAML)
config, lookup_paths, config_paths = expand_ref("config.yaml", config)

# WorkflowImpl Object Setup ===================================================
wf = SomaticNeoepitopePredictionWorkflow(workflow, config, lookup_paths, config_paths, os.getcwd())


localrules:
    # Linking files from work/ to output/ should be done locally
    somatic_neoepitope_preparation_link_out_run,


rule all:
    input:
        wf.get_result_files(),


# Generic linking out ---------------------------------------------------------


rule somatic_neoepitope_preparation_link_out_run:
    input:
        wf.get_input_files("link_out", "run"),
    output:
        wf.get_output_files("link_out", "run"),
    run:
        shell(wf.get_shell_cmd("link_out", "run", wildcards))


if "pVACseq" in wf.config["tools"] and not wf.config["pVACseq"]["path_container"]:

    rule somatic_neoepitope_prediction_pvactools_install:
        output:
            wf.get_output_files("pvacseq", "install"),
        params:
            container="docker://griffithlab/pvactools",
        resources:
            time=wf.get_resource("pvacseq", "install", "time"),
            memory=wf.get_resource("pvacseq", "install", "memory"),
            partition=wf.get_resource("pvacseq", "install", "partition"),
        log:
            wf.get_log_file("pvacseq", "install"),
        shell:
            r"""
                apptainer pull --name {output} {params.container}
            """


if wf.config["pileup"]["enabled"]:

    rule somatic_neoepitope_pvactools_pileup:
        input:
            unpack(wf.get_input_files("pvacseq", "pileup")),
        output:
            **wf.get_output_files("pvacseq", "pileup"),
        log:
            **wf.get_log_file("pvacseq", "pileup"),
        threads: wf.get_resource("pvacseq", "pileup", "threads")
        resources:
            time=wf.get_resource("pvacseq", "pileup", "time"),
            memory=wf.get_resource("pvacseq", "pileup", "memory"),
            partition=wf.get_resource("pvacseq", "pileup", "partition"),
            tmpdir=wf.get_resource("pvacseq", "pileup", "tmpdir"),
        params:
            args=wf.get_args("pvacseq", "pileup"),
        wrapper:
            wf.wrapper_path("pvactools/pileup")


if wf.config["quantification"]["enabled"]:

    rule somatic_neoepitope_pvactools_combine:
        input:
            unpack(wf.get_input_files("pvacseq", "combine")),
        output:
            **wf.get_output_files("pvacseq", "combine"),
        log:
            **wf.get_log_file("pvacseq", "combine"),
        threads: wf.get_resource("pvacseq", "combine", "threads")
        resources:
            time=wf.get_resource("pvacseq", "combine", "time"),
            memory=wf.get_resource("pvacseq", "combine", "memory"),
            partition=wf.get_resource("pvacseq", "combine", "partition"),
            tmpdir=wf.get_resource("pvacseq", "combine", "tmpdir"),
        params:
            args=wf.get_args("pvacseq", "combine"),
        wrapper:
            wf.wrapper_path("pvactools/combine")


if "pVACseq" in wf.config["tools"]:

    rule somatic_neoepitope_pvactools_prediction:
        input:
            unpack(wf.get_input_files("pvacseq", "predict")),
        output:
            **wf.get_output_files("pvacseq", "predict"),
        log:
            **wf.get_log_file("pvacseq", "predict"),
        threads: wf.get_resource("pvacseq", "predict", "threads")
        resources:
            time=wf.get_resource("pvacseq", "predict", "time"),
            memory=wf.get_resource("pvacseq", "predict", "memory"),
            partition=wf.get_resource("pvacseq", "predict", "partition"),
            tmpdir=wf.get_resource("pvacseq", "predict", "tmpdir"),
        params:
            args=wf.get_args("pvacseq", "predict"),
        wrapper:
            wf.wrapper_path("pvactools/pvacseq")
